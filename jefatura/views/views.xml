         <group>
           <group>
             <field name="telefono"/>
             <field name="email"/>
           </group>

         </group>

         <group>
           <field name="asignatura_ids"/>
         </group>


         <group>
           <field name="amonestacion_ids" widget="many2many"/>
         </group>
         <group>
           <field name="expulsion_ids" widget="many2many"/>
         </group>


         <group>
            <field name="num_amonestaciones"/>
            <field name="num_amonestaciones_sin_computar"/>
